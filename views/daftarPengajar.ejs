<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignUp Guru</title>
    <link rel="stylesheet" href="/css/styles.css">

    <script>
        function validateForm(event) {
            var username = document.querySelector('.username input').value;
            var email = document.querySelector('.email input').value;
            var password = document.querySelector('.password input').value;
    
            if (username === '' || email === '' || password === '') {
                event.preventDefault();
                alert('Mohon isi semua field.');
            }
        }
    
        window.onload = function() {
            var signInButton = document.querySelector('.lanjut button');
            signInButton.addEventListener('click', validateForm);
        };
    </script>
</head>

<body>
    <header class="header">
        <div class = "navbar">
            <div class ="logo">
                <img src="img/Logo.png" alt="Logo">
           </div>

           
        </div>
    </header>


   <div class = "main1">
       <div class = "daftarMurid">
           <h1>Daftar Sebagai Pengajar</h1>
           <img src="img/Group_139-removebg-preview.png" alt="Group_139-removebg-preview">
       </div>

       <div class = "signupGuru">
           <h1>SIGN-UP</h1>
           <form action="">
           <div class="username">
            <div class="user">Username :</div>
            <div class="input1"><input type="text" name="username"></div>
          </div>

           <div class = "email">
                <div class = "mail">Email :</div>
                <div class = "input2"><input type="text"></div>
           </div>

           <div class = "password">
                <div class = "pass">Password :</div>
                <div class = "input3"><input type="password"></div>
           </div>

           <div class = "tingkatan">
                <p>Pilih Pelajaran : </p>
                <div class = "tingkat">
                    <select name="jenis" id="pelajaran">
                        <option value="SMA">Fisika</option>
                        <option value="SMP">Kimia</option>
                        <option value="SD">Matematika</option>
                    </select>
                </div>
           </div>

           <div class = "asalSekolah">
                <div class = "asal">Tentukan Tarifmu :</div>
                <div class = "PenaLogo"><img src="IMG/pena.png" alt=""></div>
           </div>

            <button class="button" type="button" onclick="window.location.href = 'jadwalPengajar';">Lanjut</button>


       </div>
    </form>
   </div>


</body>
</html>