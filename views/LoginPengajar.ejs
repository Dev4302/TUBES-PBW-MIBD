<html>

<head>
    <title>
        Face 1
    </title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <script defer>
        function validateForm(event) {
            var username = document.querySelector('.username input').value;
            var email = document.querySelector('.email input').value;
            var password = document.querySelector('.password input').value;

            if (username === '' || email === '' || password === '') {
                event.preventDefault();
                alert('Mohon isi semua field.');
            }
        }

        window.onload = function () {
            var signInButton = document.querySelector('.lanjut button');
            signInButton.addEventListener('click', validateForm);
        };
    </script>
</head>

<body>
    <header class="header">
        <div class="navbar">
            <div class="logo">
                <img src="img/Logo.png" alt="Logo">
            </div>
        </div>
    </header>

    <div class="main" id="main">

        <div class="optkiri">
            <div class="desc">
                Log-in Sebagai Pengajar
            </div>

            <div class="gambargbg">
                <img src="img/Group_139-removebg-preview.png" alt="Group_139-removebg-preview">
            </div>
        </div>

        <div class="optkanan">
            <form action="LoginPengajar" method="post">
                <div class="tulisanlog">Log-In</div>
                <div class="emailmurid">
                    <div class="mail">Email :</div>
                    <div class="input2"><input type="text" name="email" required></div>
                </div>

                <div class="passwordmurid">
                    <div class="pass">Password :</div>
                    <div class="input3"><input type="password" name="password" required></div>
                </div>

                <button class="login" type="submit">Log-in</button>
            </form>
        </div>


    </div>

</body>

</html>